<%=form_for announcement,url:{action: action},remote: true do |f|%>
	<div class="form-group">
		<%=f.label :title%>
		<%=f.text_area :title,class:"form-control"%>
	</div>
	<div class="form-group">
		<%=f.label :content%>
		<%=f.cktext_area :content,class:"form-control"%>
	</div>		
		<%=f.submit action==:create ? "Create" : "Update" ,class:"btn btn-outline-success",onclick:"return validate();"%>
<%end%>

<script type="text/javascript">
	function validate(){
		return true;
	}
</script>