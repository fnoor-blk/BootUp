<%=form_for event,url:{action: action, timeline_id: @timeline.id},remote: true do |f|%>
	<div class="form-group">
		<%=f.label :title%>
		<%=f.text_field :title,class:"form-control"%>
	</div>
	<div class="form-group">
		<%=f.label :description%>
		<%=f.cktext_area :description,class:"form-control"%>
	</div>	
	<div>
		<%=f.label :when%><br>
		<%= f.datetime_select :when, :ampm => true, :minute_step => 1,class:"form-control" %>
	</div>
	<div>
		<%=f.label :till%><br>
		<%= f.datetime_select :till, :ampm => true, :minute_step => 1, class:"form-control" %>
	</div>
	<div class="form-group">	
		<%=f.label :open%>
		<%=f.check_box :open, class:"form-control"%>
	</div>					
		<%=f.submit action==:create ? "Create" : "Update" ,class:"btn btn-outline-success",onclick:"return validate();"%>
<%end%>

<script type="text/javascript">
	function validate(){
		return true;
	}
</script>